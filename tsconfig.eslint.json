{
	"compilerOptions": {
		"target": "es2021",
		"module": "ES2020",
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "build",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"moduleResolution": "node",
		"paths": {
			"@openfin/customize-workspace/*": ["how-to/customize-workspace/client/src/*"]
		}
	}
}
