{
	"compilerOptions": {
		"target": "es2021",
		"module": "ES2020",
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "build",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"types": ["./client/types/fin"],
		"paths": {
			"customize-workspace/*": ["./src/framework/*"]
		}
	},
	"include": ["./src/**/*.ts"]
}
