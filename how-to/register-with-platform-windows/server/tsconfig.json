{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "build",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"ignoreDeprecations": "5.0",
		"moduleResolution": "node"
	},
	"include": ["./src/**/*.ts"]
}
