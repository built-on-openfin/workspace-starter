{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "module": "es2020",
        "moduleResolution": "node",
        "outDir": "./es",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "stripInternal": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "src"
    ]
}