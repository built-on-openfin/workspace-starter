{
	"manifestHost": "http://localhost:8080",
	"contentPacks": [
		{
			"id": "platform",
			"sourceRoot": "./public",
			"sources": ["./platform/provider.html", "./js/provider.bundle.js"],
			"dest": "./"
		},
		{
			"id": "public",
			"sourceRoot": "./public",
			"sources": ["manifest-hosts.json"],
			"dest": "./"
		},
		{
			"id": "common",
			"sourceRoot": "./public/common",
			"sources": ["icons/**/*", "windows/intents/**/*"],
			"dest": "./common"
		},
		{
			"id": "schemas",
			"sourceRoot": "./public/schemas",
			"sources": ["**"],
			"dest": "./schemas"
		},
		{
			"id": "package",
			"sourceRoot": "./",
			"sources": [
				"package.json",
				"docs/**/*",
				"README.md",
				"LICENSE.md",
				"CHANGELOG.md",
				"client/types/*.*",
				"client/types/module/**"
			],
			"dest": "../",
			"dependsOn": "schemas"
		}
	],
	"replaceTypes": [".json", ".html", ".js"],
	"tokens": {
		"local": {
			"MYKEY": "value"
		}
	},
	"hosts": {
		"local": [
			"127.0.0.1",
			"built-on-openfin.github.io",
			"openfin.github.io",
			"samples.openfin.co",
			"cdn.openfin.co"
		]
	}
}
