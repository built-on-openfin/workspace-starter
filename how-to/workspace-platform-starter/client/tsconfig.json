{
	"compilerOptions": {
		"target": "es2021",
		"module": "ES2020",
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "build",
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"types": ["./types/fin"],
		"paths": {
			"workspace-platform-starter/*": ["./src/framework/*"],
			"workspace-platform-starter/utils": ["./src/framework/utils"]
		}
	},
	"include": ["./src/**/*.ts"]
}
